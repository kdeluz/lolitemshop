<%= stylesheet_link_tag 'bulma.min', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <div class="columns">
    <div class="column is-one-quarter">
      <%= render 'sidebar' %>
    </div>
    <div class="column">
      <h1 class="title is-2">Items</h1>
      <% if params[:tag] %>
        <p>Filtering by tag: <%= params[:tag] %></p>
      <% end %>
      <p>Number of items: <%= @items.count %></p>
      <div class="columns is-multiline">
        <% @items.each do |item| %>
          <div class="column is-one-third">
            <div class="box">
              <h2 class="title is-4"><%= link_to item.name, item_path(item) %></h2>
              <p><%= item.plaintext %></p>
              <%= image_tag item.image, class: "item-image" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
